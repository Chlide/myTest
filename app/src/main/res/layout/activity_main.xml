<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:text="What is Pi?"
        android:textSize="50dp"
        android:textColor="#5A00EE"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.273" />

    <EditText
        android:id="@+id/precison_input"
        android:layout_width="260dp"
        android:layout_height="83dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="221dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/baseline_calculate_24"
        android:hint="请输入你想要的精度"
        android:inputType="number"
        android:padding="20dp"
        android:textColorHint="#95a1aa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sample_text"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/submit"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="OK"
        android:textSize="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/precison_input"
        app:layout_constraintEnd_toEndOf="@+id/precison_input"
        app:layout_constraintTop_toTopOf="@+id/precison_input"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
